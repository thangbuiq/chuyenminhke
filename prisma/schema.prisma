generator client {
  provider        = "prisma-client-js"
  output          = "./generated/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Like {
  id    Int    @id @default(autoincrement())
  slug  String @unique
  count Int    @default(0)
}

model Comment {
  id        String   @id @default(cuid())
  slug      String
  author    String
  content   String
  timestamp DateTime @default(now())
}
